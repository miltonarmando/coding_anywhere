    <script>
        // Simulate error or success
        function showMessage(type, message) {
            let alert = document.getElementById(type);
            alert.textContent = message;
            alert.style.display = 'block';
        }

        // Example of redirect with error or success
        setTimeout(() => {
            showMessage('error', 'You do not have permission to access this resource.');
        }, 1000);
    </script>
